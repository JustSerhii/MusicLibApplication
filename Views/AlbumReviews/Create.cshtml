@model WebAppLab.AlbumReview

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>AlbumReview</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WritingDate" class="control-label"></label>
                <input asp-for="WritingDate" class="form-control" />
                <span asp-validation-for="WritingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewContent" class="control-label"></label>
                <input asp-for="ReviewContent" class="form-control" />
                <span asp-validation-for="ReviewContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumScore" class="control-label"></label>
                <input asp-for="AlbumScore" class="form-control" />
                <span asp-validation-for="AlbumScore" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewBag.AlbumId" name="AlbumId" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
